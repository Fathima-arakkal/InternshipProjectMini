@model List<RoleViewModel>

<h2>Manage Roles</h2>

<form asp-action="ManageRoles" method="post">
    @Html.AntiForgeryToken()

    <table class="table">
        <thead>
            <tr>
                <th>Role ID</th>
                <th>Role Name</th>
                <th>Machine</th>
                <th>Department</th>
                <th>Employee</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].RoleId</td>
                    <td>@Model[i].RoleName</td>
                    <td>@Html.CheckBoxFor(m => m[i].Machine)</td>
                    <td>@Html.CheckBoxFor(m => m[i].Department)</td>
                    <td>@Html.CheckBoxFor(m => m[i].Employee)</td>
                    <td>@Html.CheckBoxFor(m => m[i].Location)</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit">Save</button>
</form>