@model List<RoleViewModel>

<h2>Manage Roles</h2>

<div>
    Roles have been updated successfully.
</div>

<table class="table">
    <thead>
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th>Machine</th>
            <th>Department</th>
            <th>Employee</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].RoleId</td>
                <td>@Model[i].RoleName</td>
                <td>@Html.CheckBoxFor(m => m[i].Machine, new { disabled = "disabled" })</td>
                <td>@Html.CheckBoxFor(m => m[i].Department, new { disabled = "disabled" })</td>
                <td>@Html.CheckBoxFor(m => m[i].Employee, new { disabled = "disabled" })</td>
                <td>@Html.CheckBoxFor(m => m[i].Location, new { disabled = "disabled" })</td>
            </tr>
        }
    </tbody>
</table>
