@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        h1 {
            color: #007bff;
        }

        .navigation-links {
            margin-top: 20px;
        }

            .navigation-links button {
                display: block;
                margin-bottom: 10px;
                padding: 10px;
                background-color: #FCFCFD;
                border-radius: 4px;
                border-width: 0;
                box-shadow: rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
                box-sizing: border-box;
                color: #36395A;
                cursor: pointer;
                display: inline-flex;
                font-family: "JetBrains Mono", monospace;
                height: 48px;
                justify-content: center;
                line-height: 1;
                list-style: none;
                overflow: hidden;
                padding-left: 16px;
                padding-right: 16px;
                position: relative;
                text-align: left;
                text-decoration: none;
                transition: box-shadow .15s, transform .15s;
                user-select: none;
                -webkit-user-select: none;
                touch-action: manipulation;
                white-space: nowrap;
                will-change: box-shadow, transform;
                font-size: 18px;
                width: 100%; /* Make the buttons full width */
            }

                .navigation-links button:focus {
                    box-shadow: #D6D6E7 0 0 0 1.5px inset, rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
                }

                .navigation-links button:hover {
                    box-shadow: rgba(45, 35, 66, 0.4) 0 4px 8px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
                    transform: translateY(-2px);
                }

                .navigation-links button:active {
                    box-shadow: #D6D6E7 0 3px 7px inset;
                    transform: translateY(2px);
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1>Welcome to the Home Page!</h1>
        </div>

        <div class="navigation-links">
            @if (Model.EmployeePermission)
            {
                <form asp-controller="Employees" asp-action="Index" method="get">
                    <button type="submit">Employees</button>
                </form>
            }

            @if (Model.DepartmentPermission)
            {
                <form asp-controller="Departments" asp-action="Index" method="get">
                    <button type="submit">Departments</button>
                </form>
            }

            @if (Model.MachinePermission)
            {
                <form asp-controller="Machines" asp-action="Index" method="get">
                    <button type="submit">Machines</button>
                </form>
            }

            @if (Model.LocationPermission)
            {
                <form asp-controller="Locations" asp-action="Index" method="get">
                    <button type="submit">Locations</button>
                </form>
            }
        </div>
    </div>
</body>
</html>
